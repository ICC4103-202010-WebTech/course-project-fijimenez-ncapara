<%= form_with(model: @organization, local: true) do |form| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation ">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% organization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "flex-row col-auto table-darkred">
    <%= form.label :"Organization's Photo" %>
    <div class="form-group col-centered">
      <%= form.file_field :photo %>
    </div>
    <div class="form-group mt-2 ">
      <%= form.label :name %>
      <div class="form-group col-centered">
        <%= form.text_field :name, class: "table-gold" %>
      </div>
      <p>
        <%= form.submit submit_btn_text, class: ["btn","btn-red"] %>
        <%= link_to "Back", :back, class: ["btn", "btn-red"] %>
      </p>
    </div>
  </div>
<% end %>
