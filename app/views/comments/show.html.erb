<p id="notice"><%= notice %></p>
<h1> Comments of the Event: "<%=@event[0] %>" </h1>

<br>

<table>
  <thead>
  <tr>
    <th colspan="7"></th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <th> N</th>
    <th> Comment</th>
    <th> replying to</th>
    <th> Comment Creator</th>
  </tr>
  <%@comments.each do |v|%>
  <tr>
    <td><%= v.id %></td>
    <td><%= v.description %></td>
    <%@replies.each do |r|%>
      <%if (v.comment_id == r.id) %>
        <td><%= r.description %></td>
        <%end %>
    <%end %>
    <td><%= v.user.name %></td>

    <td><%= link_to 'Back', "http://localhost:3000" %></td>
  </tr>
    <%end %>
  </tbody>
</table>
