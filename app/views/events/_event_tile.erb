<div class="col-md-4">
  <div class="card mb-4 shadow-sm table-darkred">
    <% if event.flyer.attached? %>
      <%= link_to image_tag(event.flyer,class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef"), url_for(event) %>
    <%else %>
      <%= link_to image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef"), url_for(event) %>
    <%end %>
    <div class="card-body">
      <p class="card-text"><%= link_to event.name, event %></p>
      <p class="card-text"><%= event.start_date %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group  btn-group-toggle">
          <button type="button" class="btn btn-gold"><%= link_to "View", event %></button>
          <% if user_signed_in? && (current_user.id == event.user_id || current_user.administrator)  %>
            <button type="button" class="btn btn-sm btn-gold"><%= link_to "Edit", edit_event_path(event)%></button>
            <button type="button" class="btn btn-sm btn-gold" name="options" id="option3"> <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <% end %>
        </div>
       <!--
       <small class="text-muted">%= "#{(event.start_date.to_date - DateTime.now.to_date).to_i} days left!" %></small>
       -->
      </div>
    </div>
  </div>
</div>