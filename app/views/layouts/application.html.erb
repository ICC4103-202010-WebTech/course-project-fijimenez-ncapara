<!DOCTYPE html>
<html>
  <head>
    <title>CourseProjectFijimenezNcapara</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header>
    <h1 style="font-size: 100%"><a href="/"><cus>WingManBook</cus></a></h1>
  </header>
  <nav class="nav navbar-nav navbar-expand-sm">
      <% if user_signed_in? %>
        <ul id="navbar">
          <li><a href="/users"> Users</a></li>
        </ul>
      <% end %>
      <ul id="navbar">
        <li><a href="/events"> Events</a></li>
      </ul>
      <ul id="navbar">
        <li><a href="/organizations"> Organizations</a></li>
      </ul>


      </ul>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav ml-auto">
        <form id="tfnewsearch" method="get" action="http://localhost:3000/">
          <input id="searchbar" onkeyup="" type="text"
                 name="search" placeholder="Search...">
          <button type="submit"><i class="fa fa-search"></i></button>
        </form>
      </ul>
    </div>
    <% if user_signed_in? %>
      <ul id="navbar">
        <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
      </ul>
      <ul id="navbar">
        <li><%= link_to "MyProfile", current_user%></li>
      </ul>
    <% else %>
      <ul id="navbar">
        <li><%= link_to "Log in", user_session_path %></li>
      </ul>
      <ul id="navbar">
        <li><%= link_to "Sign up", new_user_registration_path %></li>
      </ul>
    <% end %>

    <script>
        var a = document.getElementById('tfnewsearch');
        a.addEventListener('submit',function(e) {
            e.preventDefault();
            var b = document.getElementById('searchbar').value;
            window.location.href = 'http://localhost:3000/'+b;

        });

    </script>
  </nav>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-sm">
            <h4>Contact Information</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-sm">
            <p>+666 6 666 007 666</p>
          </div>
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
          <div class="col-sm">
            <p>connected to servers in outer space</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>