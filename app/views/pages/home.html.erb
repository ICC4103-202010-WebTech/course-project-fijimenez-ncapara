<h1>Current Events</h1>
<!-- comments, thats how are done -->
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <%@events.each do |v|%>
    <tr>
      <td><%=v.name %></td>
      <td><%=v.description %></td>
      <td><%= link_to 'Show Comments', comment_path(v) %></td>
    </tr>
  <%end%>
</table>