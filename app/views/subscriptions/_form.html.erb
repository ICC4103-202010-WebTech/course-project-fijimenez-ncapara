<%= form_with(model: subscription, local: true) do |form| %>
  <% if subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
        <% subscription.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :user %>
    <%= form.collection_select(:user_id, User.all.where(id: current_user.id), :id, :name, {}, { class: "form-control" }) %>
  </div>

  <div class="form-group">
    <%= form.label :organization %>
    <%= form.collection_select(:organization_id, Organization.all.where(:id => params[:organization_id] ), :id, :name, {}, { class: "form-control" }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
